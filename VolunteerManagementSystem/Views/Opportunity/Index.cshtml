@using VolunteerManagementSystem.Models
@model IEnumerable<Opportunity>

@{
    ViewData["Title"] = "Opportunities";
}

<h2>Opportunities</h2>

<!-- Add New Opportunity Button -->
<a asp-action="Create" class="btn btn-primary mb-3">Add New Opportunity</a>

<!-- Filter + Search Form -->
<form asp-action="Index" method="get" class="mb-3 d-flex align-items-center">

    <!-- Filter by Criteria -->
   <label class="me-2">Filter:</label>
<select name="filter" class="form-select me-2" style="width:200px;" onchange="this.form.submit()">
    @Html.Raw(ViewData["FilterOptions"])
</select>

    <!-- Search Box -->
    <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" class="form-control me-2" style="width:250px;" placeholder="Search by title or category" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Opportunities Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var o in Model)
            {
                <tr>
                    <td>@o.Title</td>
                    <td>@o.Category</td>
                    <td>@o.Description</td>
                    <td>@o.StartDate.ToShortDateString()</td>
                    <td>@o.EndDate.ToShortDateString()</td>
                    <td>@o.Location</td>
                    <td>
                        <a asp-action="Matches" asp-route-id="@o.Id" class="btn btn-sm btn-info mb-1">View Matches</a>
                        <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-sm btn-warning mb-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@o.Id" class="btn btn-sm btn-danger mb-1">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No opportunities matched your criteria.</td>
            </tr>
        }
    </tbody>
</table>
