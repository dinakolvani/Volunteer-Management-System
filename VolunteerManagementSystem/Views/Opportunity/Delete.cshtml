@model VolunteerManagementSystem.Models.Opportunity

<h2>Delete Opportunity</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this opportunity?</strong>
</div>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
    <p><strong>Location:</strong> @Model.Location</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
