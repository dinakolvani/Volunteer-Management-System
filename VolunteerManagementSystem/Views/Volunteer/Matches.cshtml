@model IEnumerable<VolunteerManagementSystem.Models.Opportunity>

@{
    ViewData["Title"] = "Volunteer Opportunity Matches";
}

<h2>Volunteer Opportunity Matches for @ViewData["VolunteerName"]</h2>

@if (!Model.Any())
{
    <p class="text-danger">No opportunities matched with this volunteer.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var opp in Model)
        {
            <tr>
                <td>@opp.Title</td>
                <td>@opp.Category</td>
                <td>@opp.Description</td>
            </tr>
        }
        </tbody>
    </table>
}
